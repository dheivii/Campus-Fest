<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:paddingTop="44dp"
    android:paddingBottom="126dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="24dp"
        android:paddingBottom="64dp">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cultural Events"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#6A0DAD"
            android:layout_marginBottom="24dp" />

        <!-- Event Card 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="10dp"
            android:padding="20dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dgvc_fest"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CyberFest 2K25"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#6A0DAD"
                    android:layout_marginBottom="12dp" />

                <TextView android:text="📍 DG Vaishnav College Auditorium" style="@style/EventDetailStyle"/>
                <TextView android:text="📅 14 April, 2025" style="@style/EventDetailStyle"/>
                <TextView android:text="⏰ 10:00AM - 6:00PM" style="@style/EventDetailStyle"/>
                <TextView android:text="💰 ₹100 - Registration Fee" style="@style/EventDetailStyle"/>

                <!-- Buttons Layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:padding="12dp">

                    <!-- View Location Button -->
                    <Button
                        android:id="@+id/btnLocation1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="View Location"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:padding="14dp"
                        android:backgroundTint="#B266FF"
                        android:layout_marginEnd="8dp"/>

                    <!-- Register Button -->
                    <Button
                        android:id="@+id/btnRegister1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Register Now"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:padding="14dp"
                        android:backgroundTint="#8E44AD"
                        android:layout_marginStart="12dp"/>
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Event Card 2 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="10dp"
            android:padding="20dp"
            app:cardBackgroundColor="#FFFFFF"
            android:paddingHorizontal="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sairam_fest"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sparkle 2025"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#6A0DAD"
                    android:layout_marginBottom="12dp"/>

                <TextView android:text="📍 Sri Sairam Engineering College" style="@style/EventDetailStyle"/>
                <TextView android:text="📅 18 December, 2025" style="@style/EventDetailStyle"/>
                <TextView android:text="⏰ 9:00AM - 5:00PM" style="@style/EventDetailStyle"/>
                <TextView android:text="💰 ₹150 - Registration Fee" style="@style/EventDetailStyle"/>

                <!-- Buttons Layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:padding="12dp">

                    <!-- View Location Button -->
                    <Button
                        android:id="@+id/btnLocation2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="View Location"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:padding="14dp"
                        android:backgroundTint="#B266FF"
                        android:layout_marginEnd="8dp"/>

                    <!-- Register Button -->
                    <Button
                        android:id="@+id/btnRegister2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Register Now"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:padding="14dp"
                        android:backgroundTint="#8E44AD"
                        android:layout_marginStart="12dp"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Event Card 3 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="10dp"
            android:padding="20dp"
            android:paddingHorizontal="8dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/veltech_fest"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lavaza 2K25"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#6A0DAD"
                    android:layout_marginBottom="12dp"/>

                <TextView android:text="📍 VELTECH UNIVERSITY" style="@style/EventDetailStyle"/>
                <TextView android:text="📅 20 March, 2025" style="@style/EventDetailStyle"/>
                <TextView android:text="⏰ 09:00AM - 4:00PM" style="@style/EventDetailStyle"/>
                <TextView android:text="💰 ₹200 - Registration Fee" style="@style/EventDetailStyle"/>

                <!-- Buttons Layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:padding="12dp">

                    <!-- View Location Button -->
                    <Button
                        android:id="@+id/btnLocation3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="View Location"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:padding="14dp"
                        android:backgroundTint="#B266FF"
                        android:layout_marginEnd="8dp"/>

                    <!-- Register Button -->
                    <Button
                        android:id="@+id/btnRegister3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Register Now"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:padding="14dp"
                        android:backgroundTint="#8E44AD"
                        android:layout_marginStart="12dp"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradient_bg"
        app:itemIconSize="32dp"
        app:itemIconTint="#FFFFFF"
        app:itemTextColor="#FFFFFF"
        app:menu="@menu/bottom_nav_menu"/>
</RelativeLayout>
