<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:paddingTop="44dp"
    android:paddingBottom="126dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="24dp"
        android:paddingBottom="24dp">

        <!-- Seminar Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seminars"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#6A0DAD"
            android:layout_marginBottom="16dp" />

        <!-- Seminar Card 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sathyabama_seminar"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cloud Computing and Future Tech"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#6A0DAD"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>

                <TextView android:text="📍 sathyabama institute of science and technology" style="@style/EventDetailStyle"/>
                <TextView android:text="📅 30 June, 2025" style="@style/EventDetailStyle"/>
                <TextView android:text="⏰ 09:00AM - 2:00PM" style="@style/EventDetailStyle"/>
                <TextView android:text="💰 ₹150 - Registration Fee" style="@style/EventDetailStyle"/>
                <!-- Buttons Layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:padding="12dp">

                    <!-- View Location Button -->
                    <Button
                        android:id="@+id/btnLocation1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="View Location"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:padding="14dp"
                        android:backgroundTint="#B266FF"
                        android:layout_marginEnd="8dp"/>

                    <!-- Register Button -->
                    <Button
                        android:id="@+id/btnRegister1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Register Now"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:padding="14dp"
                        android:backgroundTint="#8E44AD"
                        android:layout_marginStart="12dp"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Seminar Card 2 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            android:padding="8dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/anna_adarsh_seminar"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AI and Machine Learning Trends"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#6A0DAD"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp" />

                <TextView android:text="📍 Anna Adarsh College for Women" style="@style/EventDetailStyle"/>
                <TextView android:text="📅 25 April, 2025" style="@style/EventDetailStyle"/>
                <TextView android:text="⏰ 11:00AM - 4:00PM" style="@style/EventDetailStyle"/>
                <TextView android:text="💰 ₹100 - Registration Fee" style="@style/EventDetailStyle"/>
                <!-- Buttons Layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:padding="12dp">

                    <!-- View Location Button -->
                    <Button
                        android:id="@+id/btnLocation2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="View Location"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:padding="14dp"
                        android:backgroundTint="#B266FF"
                        android:layout_marginEnd="8dp"/>

                    <!-- Register Button -->
                    <Button
                        android:id="@+id/btnRegister2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Register Now"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:padding="14dp"
                        android:backgroundTint="#8E44AD"
                        android:layout_marginStart="12dp"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Seminar Card 3 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            android:padding="16dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/wcc_seminar"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cybersecurity in 2025"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#6A0DAD"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>

                <TextView android:text="📍 Women's Christian College" style="@style/EventDetailStyle"/>
                <TextView android:text="📅 15 May, 2025" style="@style/EventDetailStyle"/>
                <TextView android:text="⏰ 10:00AM - 3:00PM" style="@style/EventDetailStyle"/>
                <TextView android:text="💰 ₹100 - Registration Fee" style="@style/EventDetailStyle"/>
                <!-- Buttons Layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:padding="12dp">

                    <!-- View Location Button -->
                    <Button
                        android:id="@+id/btnLocation3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="View Location"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:padding="14dp"
                        android:backgroundTint="#B266FF"
                        android:layout_marginEnd="8dp"/>

                    <!-- Register Button -->
                    <Button
                        android:id="@+id/btnRegister3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Register Now"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:padding="14dp"
                        android:backgroundTint="#8E44AD"
                        android:layout_marginStart="12dp"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradient_bg"
        app:itemIconSize="32dp"
        app:itemIconTint="#FFFFFF"
        app:itemTextColor="#FFFFFF"
        app:menu="@menu/bottom_nav_menu"/>
</RelativeLayout>
