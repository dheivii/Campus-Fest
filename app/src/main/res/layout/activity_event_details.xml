<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="64dp"
        android:paddingBottom="120dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="24dp">

                <HorizontalScrollView
                    android:id="@+id/imageslider"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="400dp"
                            android:layout_height="250dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/image_slider_4"/>

                        <ImageView
                            android:layout_width="400dp"
                            android:layout_height="250dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/image_slider_3"/>

                        <ImageView
                            android:layout_width="412dp"
                            android:layout_height="250dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/image_slider_2"/>

                        <ImageView
                            android:layout_width="412dp"
                            android:layout_height="250dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/image_slider_1"/>


                    </LinearLayout>
                </HorizontalScrollView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="top|end">

                    <!-- Share Icon -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp"
                        app:cardBackgroundColor="#FFFFFF"
                        android:layout_marginEnd="8dp">

                        <ImageView
                            android:id="@+id/btnShare"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/share_icon"/>
                    </androidx.cardview.widget.CardView>

                    <!-- Favorite Icon -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp"
                        app:cardBackgroundColor="#FFFFFF">

                        <ImageView
                            android:id="@+id/btnFavorite"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/favourite_black" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>


            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                >

                <TextView
                    android:id="@+id/eventTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="INFINITUS 2025"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="16dp"/>

                <!-- Date -->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/calendar"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="14 December, 2021"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </FrameLayout>

                <!-- Time -->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/clock"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tuesday, 10:00AM - 6:00PM"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </FrameLayout>

                <!-- Location -->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/location"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hotel Arts, 119 12 Ave SW, Calgary"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </FrameLayout>

                <!-- Fee -->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/money"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100 - Registration fee per head"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingVertical="24dp"
                    >

                    <TextView
                        android:id="@+id/eventFollowers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="23.5k Followers"
                        android:textSize="16dp"
                        android:textColor="#6A0DAD"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/eventAttendees"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="200+ are attending this event"
                        android:textSize="16dp"
                        android:textColor="#6A0DAD"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Event Description"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"/>

                    <!-- Description Text -->
                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:ellipsize="end"
                        android:text="INFINITUS'25 - National level Techno Cultural Fest by the Student Council of SRM University - AP, offers a riveting amalgamation of sensational artist performances, high-energy DJ sets, thrilling competitions, a captivating auto expo, and live band performances. This multifaceted celebration serves as a dynamic platform for cultural exchange, fostering talent from across the nation and delivering an unforgettable fusion of music, art, and automotive innovation."
                        android:textSize="16sp"
                        android:textColor="@color/black"/>

                    <!-- Read More Button -->
                    <TextView
                        android:id="@+id/btnReadMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Read More"
                        android:textSize="14sp"
                        android:textColor="#6A0DAD"
                        android:paddingTop="8dp"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:focusable="true"/>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingHorizontal="24dp">

                <!-- Event Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Events"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="8dp"/>

                <!-- Event Cards -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:clipToPadding="false"
                        android:clipChildren="false">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:clipToPadding="false"
                            android:clipChildren="false"
                            android:padding="8dp">

                            <!-- Event 1 -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="120dp"
                                android:layout_height="60dp"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="8dp"
                                android:layout_marginEnd="16dp"
                                android:clipChildren="false"
                                android:clipToPadding="false">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Debugging"
                                    android:gravity="center"
                                    android:textSize="16dp"
                                    android:textColor="#6A0DAD"
                                    android:background="#FFFFFF"
                                    android:padding="12dp"/>
                            </androidx.cardview.widget.CardView>

                            <!-- Event 2 -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="120dp"
                                android:layout_height="60dp"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="8dp"
                                android:layout_marginEnd="16dp"
                                android:clipChildren="false"
                                android:clipToPadding="false">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Techno Jam"
                                    android:gravity="center"
                                    android:textSize="16dp"
                                    android:textColor="#6A0DAD"
                                    android:background="#FFFFFF"
                                    android:padding="12dp"/>
                            </androidx.cardview.widget.CardView>

                            <!-- Event 3 -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="120dp"
                                android:layout_height="60dp"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="8dp"
                                android:layout_marginEnd="16dp"
                                android:clipChildren="false"
                                android:clipToPadding="false">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Mind Crashers"
                                    android:gravity="center"
                                    android:textSize="16dp"
                                    android:textColor="#6A0DAD"
                                    android:background="#FFFFFF"
                                    android:padding="12dp"/>
                            </androidx.cardview.widget.CardView>

                            <!-- Event 4 -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="120dp"
                                android:layout_height="60dp"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="8dp"
                                android:layout_marginEnd="16dp"
                                android:clipChildren="false"
                                android:clipToPadding="false">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Blind Coding"
                                    android:gravity="center"
                                    android:textSize="16dp"
                                    android:textColor="#6A0DAD"
                                    android:background="#FFFFFF"
                                    android:padding="12dp"/>
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>
                    </HorizontalScrollView>



                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="24dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnLocation1"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="View Location"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:backgroundTint="#B266FF"
                    android:gravity="center"
                    android:layout_marginVertical="16dp"
                    android:elevation="6dp"/>


                <Button
                    android:id="@+id/Register"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="Register"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:backgroundTint="#B266FF"
                    android:gravity="center"
                    android:layout_marginVertical="16dp"
                    android:elevation="6dp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Fixed Bottom Navigation Bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradient_bg"
        app:itemIconSize="32dp"
        app:itemIconTint="#FFFFFF"
        app:itemTextColor="#FFFFFF"
        app:menu="@menu/bottom_nav_menu"/>

</RelativeLayout>