<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:paddingHorizontal="24dp"
    android:paddingVertical="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Event Card 1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:radius="12dp"
            android:elevation="6dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:backgroundTint="#FFFFFF"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">

                <!-- Event Image -->
                <ImageView
                    android:id="@+id/eventImage1"
                    android:layout_width="100dp"
                    android:layout_height="143dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ai_research_council" />

                <!-- Event Details -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp">

                    <TextView
                        android:id="@+id/eventName1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Event Name"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/eventLocation1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location: XYZ Venue"
                        android:textSize="14dp"
                        android:textColor="#333333"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/eventDateTime1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date and Time: 14 Dec, 2021 | 10 AM - 6 PM"
                        android:textSize="14dp"
                        android:textColor="#333333"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/collegeName1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="College: ABC University"
                        android:textSize="14dp"
                        android:textColor="#333333"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/participantID1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Participant ID: #123456"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:layout_marginBottom="4dp"
                        android:textColor="@color/black"/>

                    <!-- Registration Fee -->
                    <TextView
                        android:id="@+id/registrationFee1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Registration Fee: 100"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:layout_marginBottom="4dp"
                        android:textColor="@color/black"/>

                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

